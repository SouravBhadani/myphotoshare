<%= simple_form_for @pin , :validate => true ,html: { multipart: true } do |f| %>
      <% if @pin.errors.any? %>
        <div id="error_explanation">
          <h2>
              <%= pluralize(@pin.errors.count, "error") %>
              prohibited this pin from being saved:
          </h2>
          <ul>
            <% @pin.errors.full_messages.each do |message| %>
              <li>
                  <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :descrption %><br>
        <%= f.text_field :descrption, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :image, class:"form-control" ,style:"display:none",id:"lefile" %>
        
          <div class="input-append",style:"color:red">
          <input id="photoCover" class="input-large" type="text">
          <a class="btn" onclick="$('input[id=lefile]').click();">Browse</a>
          </div>
 

      </div>
      <div class="actions">
        <%= f.submit "Create Pin", :class=>"btn btn-primary" %>
      </div>
<% end %>
<script type="text/javascript">
$('input[id=lefile]').change(function() {
$('#photoCover').val($(this).val());
});
</script>