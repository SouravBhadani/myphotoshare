<% if @pins.present? %>
<% @pins.each do |pin| %>
     <%= link_to image_tag(pin.image.url(:thumb)) ,pin%><br />
      <%= pin.descrption %><br />
      <%= pin.user.full_name %>  
     <% if pin.user == current_user %>
       <%= link_to 'Edit', edit_pin_path(pin) %>
       <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %> 
    </br>
<% end %>
<% else %>
<div class="center">
    There are no Pins Available 
</div>

