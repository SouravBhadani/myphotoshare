<div class="row">
     <div class="col-md-offset-2 col-md-8 center">
          <div class="panel panel-default center">
                  <div class="panel-heading ">
                  <%= image_tag  @pin.image.url(:normal)%>
                  </div>
                <div class="panel-body">
                    <%= @pin.descrption %><br />
